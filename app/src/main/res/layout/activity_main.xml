<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/default_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Default_Menu"/>

    <Button
        android:id="@+id/takeout_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Takeout_Menu"/>

    <Button
        android:id="@+id/customized_one_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Customized_One_Menu"/>

    <Button
        android:id="@+id/customized_list_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Customized_List_Menu"/>

    <Button
        android:id="@+id/customized_sort_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Customized_Sort_Menu"/>

    <com.xdhywj.commonmenu.view.CommonMenuItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commonmenu_itemview"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
